<section class="hero-paragraph" style="background-image: url('{{ content.field_section_background['#items']|file_url }}')">
  {% block content %}
    {% if content.field_section_main_text %}
      <h1 class="main-page-title">{{ content.field_section_main_text }}</h1>
    {% endif %}
    {% if content.field_section_description_text %}
      <h2 class="main-section-words">{{ content.field_section_description_text }}</h2>
    {% endif %}
    {% if content.field_section_main_link %}
      {{ content.field_section_main_link }}
    {% endif %}
  {% endblock %}
</section>
